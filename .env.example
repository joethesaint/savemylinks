# SaveMyLinks Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME=SaveMyLinks
APP_VERSION=1.0.0

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host and port
HOST=127.0.0.1
PORT=8000

# Enable auto-reload for development (true/false)
RELOAD=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database connection URL
# SQLite (default for development)
DATABASE_URL=sqlite:///./savemylinks.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/savemylinks

# MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/savemylinks

# Enable SQLAlchemy query logging (true/false)
DATABASE_ECHO=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for cryptographic operations
# IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-change-in-production

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins (comma-separated)
# For development
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# For production (specify your actual domains)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Allow credentials in CORS requests (true/false)
# WARNING: Do not use with wildcard origins!
ALLOW_CREDENTIALS=false

# Allowed HTTP methods for CORS (comma-separated)
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers for CORS requests (comma-separated)
ALLOWED_HEADERS=*

# =============================================================================
# RATE LIMITING SETTINGS
# =============================================================================

# Enable rate limiting middleware (true/false)
RATE_LIMIT_ENABLED=true

# Number of requests allowed per window
RATE_LIMIT_REQUESTS=1000

# Rate limiting window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log file path (leave empty for console only)
LOG_FILE=logs/savemylinks.log

# Enable log file rotation (true/false)
LOG_ROTATION=true

# Maximum log file size before rotation
LOG_MAX_SIZE=10MB

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Enable in-memory caching (true/false)
CACHE_ENABLED=true

# Default cache TTL in seconds (300 = 5 minutes)
CACHE_DEFAULT_TTL=300

# Maximum number of cache entries
CACHE_MAX_SIZE=1000

# =============================================================================
# STATIC FILES SETTINGS
# =============================================================================

# Enable static file serving (true/false)
STATIC_FILES_ENABLED=true

# Static files directory
STATIC_DIRECTORY=app/static

# Templates directory
TEMPLATES_DIRECTORY=app/templates

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# These settings are typically only used in development

# Enable detailed error pages (true/false)
# Automatically set based on ENVIRONMENT, but can be overridden
# SHOW_ERROR_DETAILS=true

# Enable API documentation (true/false)
# ENABLE_DOCS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# These settings are recommended for production environments

# Example production configuration:
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your-very-secure-secret-key-here
# DATABASE_URL=postgresql://username:password@localhost:5432/savemylinks
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# LOG_LEVEL=INFO
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=3600

# =============================================================================
# OPTIONAL EXTERNAL SERVICES
# =============================================================================

# Redis (for advanced caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0

# Email settings (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Monitoring and analytics
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
# ENABLE_USER_REGISTRATION=true
# ENABLE_LINK_SHARING=true
# ENABLE_LINK_ANALYTICS=false
# ENABLE_BULK_OPERATIONS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool settings
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# Request timeout settings (in seconds)
# REQUEST_TIMEOUT=30
# KEEP_ALIVE_TIMEOUT=5

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup settings
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# Maintenance mode
# MAINTENANCE_MODE=false
# MAINTENANCE_MESSAGE=The application is currently under maintenance.

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the same directory
# 2. Uncomment and modify the values you want to change
# 3. Never commit .env files to version control
# 4. Use strong, unique values for SECRET_KEY in production
# 5. Configure proper CORS origins for your domain in production
# 6. Consider using environment-specific .env files:
#    - .env.development
#    - .env.staging  
#    - .env.production
# 7. For production, consider using a proper secrets management system
# 8. Test your configuration in a staging environment before production
# 9. Monitor your logs and adjust LOG_LEVEL as needed
# 10. Regularly review and update your security settings